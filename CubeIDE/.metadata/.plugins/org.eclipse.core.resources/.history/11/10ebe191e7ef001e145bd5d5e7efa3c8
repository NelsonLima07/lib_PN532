#ifndef __MAIN_J3_PN532_H
#define __MAIN_J3_PN532_H

#ifdef __cplusplus
extern "C" {
#endif

#include "i2c.h"

struct TPN532{
    I2C_HandleTypeDef* i2c;
    uint8_t address;
    uint8_t *buffer;
};
typedef struct TPN532 TPN532;

typedef int TfuncSendCmd(TPN532 *_pn532, uint8_t *_msg, uint8_t tam);


TPN532* j3_PN532_new(I2C_HandleTypeDef* _i2c, uint8_t _i2c_address); /* Retorna um ponteiro para um PN532 */

TPN532* j3_PN532_GravaTag(TPN532 *_pn532, uint8_t *_msg, uint8_t tam); /* Retorna um ponteiro para um PN532 */

#ifdef __cplusplus
}
#endif

#endif /* __MAIN_J3_PN532_H */
